<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
        <th> Name </td> 
        <th> Homepage </td>
    </tr>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.first_name %> <%= author.last_name %> </td>
        <td><%= author.homepage %></td>
        <td><%= link_to 'Details', author_path(author) %></td>
        <td><%= link_to 'Edit', edit_author_path(author) %></td>
        </tr>
    <% end %>
  </tbody>
</table>

